@model RealStateApp.Core.Application.ViewModels.User.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - RealStateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <style>
        :root {
            --rich-black: #050517;
            --smoky-black: #341809;
            --flame: #CF5C36;
            --sunset: #EFC88B;
            --vanilla: #F4E3B2;
            --platinum: #D3D5D7;
        }
        .footer{
            margin-top: 50px;
        }
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: var(--vanilla);
            color: var(--rich-black);
        }

        .login-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 56px); /* Resta la altura del navbar */
        }

        .separator {
            width: 250px;
            height: calc(100vh - 56px); /* Resta la altura del navbar */
            background: linear-gradient(0deg, var(--rich-black), var(--smoky-black));
            animation: gradient-animation 5s infinite alternate;
            align-content: center;
            align-items: center;
            display: flex;
            padding: 20px;
            transform: translateX(-180px);
        }

        .text-center {
            color: aliceblue;
            transform: translateX(10px);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--platinum);
            border-radius: 5px;
        }

        .btn {
            width: 100%;
            padding: 10px;
            background-color: var(--rich-black);
            color: var(--sunset);
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
        }

        .btn:hover {
            background-color: var(--flame);
            color: white;
        }

        .error {
            color: var(--flame);
            font-size: 0.9rem;
        }

        /* Animación de degradado */
        @@keyframes gradient-animation {
            0% {
                background: linear-gradient(0deg, var(--rich-black), var(--smoky-black));
            }
            50% {
                background: linear-gradient(180deg, var(--smoky-black), var(--rich-black));
            }
            100% {
                background: linear-gradient(360deg, var(--rich-black), var(--smoky-black));
            }
        }

        .alert .alert {
            padding: 1px;
            transform: translateY(-100px);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center">
                        <h4>Iniciar Sesión</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group mb-3">
                                @Html.LabelFor(m => m.EmailOrUsername, "Correo", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.EmailOrUsername, new { @class = "form-control", placeholder = "Ingresa tu correo o nombre de Usuario" })
                                @Html.ValidationMessageFor(m => m.EmailOrUsername, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-3">
                                @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "form-label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                                <a href="@Url.Action("Register", "Account")" class="btn btn-link">Crear cuenta</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
