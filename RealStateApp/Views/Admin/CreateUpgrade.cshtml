@using RealStateApp.Core.Application.ViewModels.Upgrades
@model UpgradeHandlerViewModel

@{
    ViewData["title"] = "Crear";
}

<head>
    <style>
        body {
            background-color: #f3e3b2;
        }

        .card {
            border: 1px solid black;
            margin-top: 100px;
            width: 400px;
        }

        .footer {
            margin-top: 190px;
        }
    </style>
</head>

<div class="card col-4 offset-4">
    <div class="card-body">
        <form asp-controller="Admin" asp-action="CreateUpgradePost" method="post">

            <label asp-for="Nombre">Nombre:</label>
            <input class="form-control" type="text" asp-for="Nombre" required />

            <label asp-for="Descripcion">Descripción:</label>
            <input class="form-control" type="text" asp-for="Descripcion" required />

            <div>
                <br />
                <button class="btn btn-success" type="submit">Crear</button>
                <a class="btn btn-danger" asp-action="Upgrades">Volver</a>
            </div>
        </form>
    </div>
</div>