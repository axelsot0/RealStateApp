@using RealStateApp.Core.Application.ViewModels.Sales
@model SaleTypeViewModel

@{
    ViewData["title"] = "Editar";
}

<head>
    <style>
        .footer {
            margin-top: 120px;
        }

        body {
            background-color: #f3e3b2;
        }

        .card {
            border: 1px solid black;
            margin-top: 100px;
        }
    </style>
</head>

<body>
    <div class="card col-4 offset-4">
        <div class="card-body">
            <form asp-controller="Admin" asp-action="EditSaleTPost" method="post">

                <label asp-for="Id">Id:</label>
                <input class="form-control" type="text" asp-for="Id" readonly required />

                <label asp-for="Nombre">Nombre:</label>
                <input class="form-control" type="text" asp-for="Nombre" required />

                <label asp-for="Descripcion">Descripción:</label>
                <input class="form-control" type="text" asp-for="Descripcion" required />

                <div>
                    <br />
                    <button class="btn btn-success" type="submit">Editar</button>
                    <a class="btn btn-danger" asp-action="SaleType">Volver</a>
                </div>
            </form>
        </div>
    </div>
</body>