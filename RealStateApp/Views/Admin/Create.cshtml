@using RealStateApp.Core.Application.ViewModels.User
@model CreateUserViewModel

@{
    ViewData["title"] = "Crear";
}

<style>
      body {
          background-color: #f3e3b2;
      }

      .card {
          border: 1px solid black;
          margin-top: 40px;
      }

      label{
          margin-top: 10px;
      }
</style>

<body>
    <div class="card col-4 offset-4">
        <div class="card-body">
            <form asp-controller="Admin" asp-action="CreatePost" method="post">

                <div>
                    <label asp-for="Username" >Nombre de usuario:</label>
                    <input class ="form-control" type="text" asp-for="Username" />
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>
                <div>
                    <label asp-for="FirstName" >Nombre:</label>
                    <input class ="form-control" type= "text" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div>
                    <label asp-for="LastName">Apellido:</label>
                    <input class ="form-control" type= "text" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div>
                    <label asp-for="Email" >Correo electrónico:</label>
                    <input class ="form-control" type="text" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="Cedula" >Cedula:</label>
                    <input class ="form-control" type="text" asp-for="Cedula" />
                    <span class="text-danger" asp-validation-for="Cedula"></span>
                </div>
                <div>
                    <label asp-for="Password" >Contraseña:</label>
                    <input class ="form-control" type="password" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" >Confirmar contraseña:</label>
                    <input class ="form-control"type="password" asp-for="ConfirmPassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                
                <input type="hidden" value="@(Model.Role)" asp-for="Role">

                <div>
                    <br />
                    <button class="btn btn-success" type="submit">Crear</button>
                    <a class="btn btn-danger" asp-action="@(Model.Role)">Volver</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>